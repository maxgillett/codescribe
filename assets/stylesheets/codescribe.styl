body
	font: 13px 'helvetica neue', helvetica, arial, sans-serif
	-webkit-font-smoothing: antialiased
	overflow: hidden

li 
	list-style: none

pre, xmp, plaintext, listing {
	display: block;
	font-family: monospace;
	white-space: pre;
	margin: 1em 0px;
}


header_height = 40px
nav_width = 200px
nav_outer_border = #929292
nav_item_height = 50px
nav_item_bg = #f0f0f0
off_black = #2f2f2f
pane_bg = #b4b8c7
nav_pane_width = 275px
nav_pane_padding = 18px
header_color = lighten(#343434, 15)

#header
	width: 100%
	height: header_height
	background: #2f2f2f

#header #new-room
	cursor: pointer;
	absolute: top 7px right 7px
	font-weight: bold;
	padding: 5px
	background: #E6E7E6
	border-radius: 3px
	color: off_black

// Navigation

#navigation
	border-left: 1px solid nav_outer_border
	border-right: 1px solid nav_outer_border
	position: absolute
	left: 0
	top: header_height
	bottom: 0
	width: nav_width
	background: grey
 
#navigation #dashboard, #chats, #files, #friends
	cursor: pointer
	position: relative
	left: offset = 0px
	top: offset
	border-bottom: 1px solid #d4d4d4
	margin-bottom: offset
	width: nav_width - 2*offset
	height: nav_item_height
	background: nav_item_bg
	color: off_black
	font-weight: bold
	font-size: 16px

#navigation .text
	display: block
	padding: 10px 0px 10px 15px

#navigation .dash-img, .chats-img, .files-img, .friends-img
	relative: top 4px right 4px
	display: inline-block
	width: 20px
	height: 20px


#navigation .chats-img
	image: '/images/chat-img.png' 20px 20px

#navigation .chats-img.white
	image: '/images/chat-img-white.png' 20px 20px

#navigation .dash-img
	image: '/images/dash-img.png' 20px 20px

#navigation .dash-img.white
	image: '/images/dash-img-white.png' 20px 20px

#navigation .files-img
	image: '/images/files-img.png' 20px 20px

#navigation .files-img.white
	image: '/images/files-img-white.png' 20px 20px

#navigation .friends-img
	image: '/images/friends-img.png' 20px 20px



#navigation .text span
	relative: left 3px

#container #navigation div.active
	cursor: auto
	border-bottom: 1px solid nav_outer_border
	border-top: 1px solid nav_outer_border
	color: #f6f5f5

#container #navigation #dashboard.active
	background: lighten(#527eb4, 15)

#container #navigation #chats.active
	border-right: 1px solid pane_bg
	background: linear-gradient(left, darken(pane_bg, 8), pane_bg)

#container #navigation #files.active
	bg = #a2be8c
	border-right: 1px solid bg
	background: linear-gradient(left, darken(bg, 8), bg)

#container #navigation div.no-border-bottom
	border-bottom: 0px

#container #navigation div.no-border-top
	border-top: 0px

// Friend list

f_margin = 33px
chat_green = #27832b

#friends_list
	width: 100%
	padding: 5px 0px 5px 0px
	background: linear-gradient(top, #c8c8c8, #b6b5b5)
	border-bottom: 2px solid #767676

#friends_list li
	position: relative
	padding: 8px 0px 8px 10px 

#friends_list li .avatar
	position: absolute
	left: 10px
	top: 8px
	width: 24px
	height: 24px
	border-radius: 2px
	border: 1px solid lighten(#959595, 8)
	image: '/images/avatar.png' 24px 24px

#friends_list span
	display: block;
	margin: 0 0 0 f_margin
	padding: 0

#friends_list span.name
	font-size: 12px

#friends_list span.status
	font-size: 10px
	margin-left: f_margin + 8
	color: #3d3d3d

#friends_list span.status.online
	color: chat_green
	font-weight: bold

#friends_list span.status:after
	content: ''
	position: absolute
	width: s = 5px
	height: s
	background: black
	bottom: 11px
	left: f_margin + 10
	background: #7f7f7f
	border-radius: s 

#friends_list span.status.online:after
	background: chat_green



