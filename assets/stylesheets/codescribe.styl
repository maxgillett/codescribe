#nav_pane #fixed_header 
	position: relative
	z-index: 10
	padding: 10px 0 0 nav_pane_padding
	width: nav_pane_width - nav_pane_padding
	height: 55px

#nav_pane #fixed_header #search
	box-shadow: 0px -1px 2px 0px lighten(black, 40)
	border: none
	margin: 0
	padding: 0px 0px 0px p = 23px
	outline: none
	height: 20px
	width: nav_pane_width - 2*nav_pane_padding 
	margin-bottom: 5px
	background: white
	border-radius: 9px

#nav_pane #fixed_header .mag_icon
	content: ''
	absolute: left 22px top 12px
	z-index: 5
	width: 16px
	height: 16px
	image: '/images/glass.png' 16px 16px

#nav_pane #fixed_header #sort
	height: 33px

#nav_pane #fixed_header #sort div
	cursor: pointer
	float: left
	padding: 3px 13px 3px 13px
	background: white
	border: 1px solid nav_outer_border
	background: linear-gradient(top, white, #d5d5d5)

#nav_pane #fixed_header #sort div:first-child
	border-radius: 4px 0 0 4px
	border-right: none

#nav_pane #fixed_header #sort div:last-child
	border-radius: 0 4px 4px 0
	border-left: none

#nav_pane #fixed_header #sort div.active
	cursor: auto
	color: white
	box-shadow: 0px 0px 1px 0px lighten(black, 40) inset
	background: linear-gradient(bottom, #4e8adb, #668fe3)

#nav_pane #fixed_header_faded
	z-index: 5
	position: fixed
	padding-top: 65px
	height: 10px
	width: nav_pane_width
	background: pane_bg

#nav_pane #chat_container
	position: absolute
	overflow-x: none
	overflow-y: auto
	top: 58px
	bottom: 0
	padding: 10px 0 0 nav_pane_padding
	width: nav_pane_width - nav_pane_padding

#nav_pane h2
	font-size: 14px
	font-weight bold
	padding: 0 0 2px p = 4px
	width: nav_pane_width - 2*nav_pane_padding - p
	color: header_color
	border-bottom: 2px solid header_color

#nav_pane h2 span:last-child
	float: right
	font-weight: normal

#nav_pane #group
	width: nav_pane_width - 2*nav_pane_padding
	padding: 8px 0 15px 0

#nav_pane #group .chat
	box-shadow: 0px 0px 3px 0px lighten(black, 40)
	cursor: pointer
	width: auto
	height: 75px
	background: white
	font-size: 11px
	padding: 5px

#nav_pane #group .chat .members
	font-weight: bold
	display: inline-block
	padding-bottom: 2px

#nav_pane #group .chat .time
	float: right
	padding-right: 3px

#nav_pane #group .chat .text
	display: block
	color: #555555

#nav_pane #group .chat.active
	box-shadow: 0px 0px 4px 0px lighten(black, 40) inset
	background: linear-gradient(top, #4e8adb, #3875c7)
	color: white

#nav_pane #group .chat.active .text
	color: white

#group>.chat:first-of-type
	border-radius: 5px 5px 0px 0px

#group>.chat:nth-of-type(even)
	border-top: 1px solid nav_outer_border
	border-bottom: 1px solid nav_outer_border

#group>.chat:last-of-type
	border-radius: 0px 0px 5px 5px



// Content	

img_size = 35px

#content
	position: absolute
	top: header_height
	//left: nav_width + 3 + nav_pane_width
	left: nav_width + 2
	right: 0
	bottom: 0
	background: #e6e7e6

#content #message_window
	position: absolute
	left: 15px
	top: 15px
	right: 15px
	bottom: 70px 
	background: white
	border-radius: 3px
	padding: 12px
	border: 1px solid #c6c6c6
	min-width: 200px
	overflow: auto;

#divider 
	height: 1px
	margin: 8px 0px
	background: lighten(nav_outer_border, 30)

#message .image 
	float: left
	relative: top 4px
	width: img_size
	height: img_size

#message .profile-img
	width: img_size
	height: img_size
	border-radius: 3px

#message .text
	padding-left: img_size + 10

#message .text .msg 
	padding-bottom: 5px

.clearfix {
	clearfix()
}

#content #message_window #message .name
	font-weight: bold
	font-size: 14px

#content #message_window #message .time
	font-size: 11px
	color: #484848


#content #response 
	position: absolute
	margin: 0
	bottom: 15px
	left: 15px
	right: 15px
	height: 40px
	color: grey
	border: none
	outline: none
	padding: 5px
	border-radius: 3px
	border: 1px solid #c6c6c6



