// Room 

left-pane-width = 225px
right-pane-width = 250px

#left-pane
  position: absolute
  width: left-pane-width
  top: header_height
  bottom: 0
  background: #d6d6d6
  border-left: 2px solid #5e5e5e

#center-pane
  position: absolute
  top: header_height
  left: left-pane-width
  right: right-pane-width + 2px
  bottom: 0
  background: #042029

#right-pane
  position: absolute
  top: header_height
  right: 0
  bottom: 0
  width: right-pane-width
  background: #d6d6d6
  border-left: 2px solid #5e5e5e

  .team
    position: relative
    width: right-pane-width
    height: 175px
    background: white
    border-bottom: 2px solid lighten(black, 80)

    #name
      background: darken(white, 50)
      padding: 5px     
      font-family: 'Ubuntu', sans-serif
      background: #8a646c
      color: white
      font-size: 16px
      padding: 6px

      .room
        cursor: pointer
        position: absolute
        right: 10px
        top: 6px
        width: 25px
        height: 18px
        background: lighten(#8a646c, 15)

    .memb
      padding: 5px 5px 5px 5px
      background: lighten(black, 90)
      border-bottom: 1px solid lighten(black, 70)
      color: lighten(black, 10)
      font-family: 'Open Sans', sans-serif
      
      .offline
        display: inline-block
        position: relative
        top: -2px
        left: 3px
        margin-right: 8px
        width: 5px
        height: 5px
        border-radius: 3px
        background: darken(white, 28)

      .online
        @extends #team-container #members .memb .offline
        background: #3a9849

      &:last-of-type
        padding-bottom: 5px

  .chat
    position: absolute
    width: right-pane-width
    top: 175px + 2px
    bottom: 120px
    background: darken(white, 5)
    border-bottom: 2px solid lighten(black, 80)

  .box
    position: absolute
    height: 120px
    bottom: 0
    left: 0
    right: 0
    background: white
    outline: none
    border: none