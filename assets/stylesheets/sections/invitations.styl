#invite-container
  position: absolute
  top: header_height
  bottom: 0
  right: right-pane-width
  overflow: auto
  left: 125px
  padding: 20px

  .invitation
    float: left
    margin-right: 20px
    margin-bottom: 20px
    width: 225px
    background: team_bg

    .name
      position: relative
      font-family: 'Ubuntu', sans-serif;
      color: white
      font-size: 16px
      padding: 6px 6px 6px 10px
      background: lighten(black, 45)

    .invited-by
      padding: 6px 6px 6px 10px
      background: lighten(black, 70)
      color: lighten(black, 30)

      span
        color: lighten(black, 30)

    .permissions
      margin: 10px
      padding: 6px 6px 6px 10px
      font-family: 'Open Sans', sans-serif
      color: lighten(black, 15)
      font-size: 13px
      background: lighten(team_bg, 10)

      span
        font-weight: bold

      ul
        padding-left: 25px
        margin-bottom: 5px

      li
        list-style-type: circle
        text-indent: -4px

    .decision
      margin: 10px
      height: 25px

      .accept
        cursor: pointer
        box-sizing: border-box
        padding: 5px
        text-align: center
        float: left
        margin-right: 10px
        width: 98px
        height: 25px
        background: #81b078

      .decline
        cursor: pointer
        box-sizing: border-box
        padding: 5px
        text-align: center
        float: left
        width: 97px
        height: 25px
        background: #a48484